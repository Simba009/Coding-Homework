        print(item_descr + '..')
10)"""Starter Code"""

# TODO: Write the function is_palindrome
def is_palindrome(string):
    last_indx = len(string) - 1
    for i in range(len(string)):
        if string[i] != string[last_indx - i]:
            return False
    # If here, string is palindrome
    return True
    
is_palindrome("racecar")
is_palindrome("kayak")
is_palindrome("noon")
print(is_palindrome("a"))        # True edge case: one character
print(is_palindrome(""))         # True edge case: empty string
print(is_palindrome("!---?"))    # False
print(is_palindrome("abcdeba"))  # False
print(is_palindrome("xyzwyx"))   # False

